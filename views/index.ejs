<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <main class="min-h-screen w-full bg-zinc-900">

            <form action="/create" method="post" class="flex flex-col gap-5 w-1/4 p-10">
                <input type="text" name="title" value="Enter File Name" class="p-2">
                <textarea name="description"
                    class="p-2">Write Message Here</textarea>
                <button
                    class="px-6 py-2 bg-green-700 hover:bg-green-800 text-white font-semibold rounded">Add
                    Task</button>
            </form>

            <div class="p-10">

                <% if(files.length > 0){ %>

                    <% files.forEach((val)=>{ %>
                    <div class="w-1/4 bg-white p-5 rounded">
                    <h1 class="text-4xl font-mono font-bold">hello.txt</h1>
                    <div class="flex items-center justify-between mt-5">
                        <a href class="text-lg  hover:text-indigo-700">Read
                            More...</a>
                        <a href
                            class="px-4 py-2 bg-indigo-700 hover:bg-indigo-800 rounded text-white">Edit
                            File Name</a>
                    </div>
                    </div>
                     <%}) %>

                <% } else{ %>
                      <h3 class="text-white text-xl">No Task Yet..</h3>
                <% } %>

            </div>

        </main>
    </body>
</html>